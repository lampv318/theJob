<body class="login-page">
  <main>

    <div class="login-block">
      <img src="assets/img/logo.png" alt="">
      <h1>Log into your account</h1>

      <%= form_for :user, url: login_path do |f| %>

        <div class="form-group">
          <div class="input-group">
            <span class="input-group-addon"><i class="ti-email"></i></span>
            <%= f.text_field :email, class: "form-control", placeholder: "Your email address" %>
          </div>
        </div>

          <hr class="hr-xs">

        <div class="form-group">
        <div class="input-group">
          <span class="input-group-addon"><i class="ti-unlock"></i></span>
          <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
        </div>
      </div>

        <%= f.submit "SIGN UP", class: "btn btn-primary btn-block" %> 

      <% end %>
    </div>

    <div class="login-links">
      <a class="pull-left" href="user-forget-pass.html">Forget Password?</a>
      <a class="pull-right" href="user-register.html">Register an account</a>
    </div>

  </main>
</body>
