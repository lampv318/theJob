<div class="nested-fields">
  <div class="col-xs-12">
    <div class="item-block">
      <div class="item-form">
        <button class="btn btn-danger btn-float btn-remove"><i class="ti-close"></i></button>
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <div class="form-group">
              <input type="file" class="dropify" data-default-file="https://raw.githubusercontent.com/lampv318/image/master/noavatar-1.jpg">
              <span class="help-block">Please choose a square logo</span>
            </div>
          </div>
          <div class="col-xs-12 col-sm-8">
            <div class="form-group">
              <%= f.text_field :degree, class: "form-control", placeholder: "Degree, e.g. Bachelor" %>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Major, e.g. Computer Science">
            </div>
            <div class="form-group">
              <%= f.text_field :school_name, class: "form-control",
               placeholder:"School name, e.g. Massachusetts Institute of Technology" %>
            </div>
            <div class="form-group">
              <div class="input-group">
                <span class="input-group-addon">Date from</span>
                <%= f.date_field :date_from , class: "form-control", placeholder: "e.g. 2012" %>
                <span class="input-group-addon">Date to</span>
                <%= f.date_field :date_to , class: "form-control", placeholder: "e.g. 2016" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.text_area :description, placeholder: "Short description",  cols: "76" ,rows: "3" %>
            </div>
          </div>
        </div>
        <%= link_to_remove_association "X", f , class: "btn btn-danger btn-float btn-remove" %>
      </div>
    </div>
  </div>
</div>
