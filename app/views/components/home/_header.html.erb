<header class="site-header size-lg text-center" style="background-image: 
  url(https://raw.githubusercontent.com/lampv318/image/master/bg-banner1.jpg)">
  <div class="container">
    <div class="col-xs-12">
      <br><br>
      <h2>We offer <mark><%= @jobs.count %></mark> job vacancies right now!</h2>
      <h5 class="font-alt">Find your desire one in a minute</h5>
      <br><br><br>
      <%= search_form_for @q, url: search_path, html: {class: "header-job-search"} do |f| %>
        <div class="input-keyword">
          <%= f.text_field :title_or_company_name_or_employment_type_cont,
            class: "form-control", placeholder: "Job title, employment, or company" %>
        </div>
        <div class="input-location">
          <%= f.text_field :location_cont, class: "form-control", placeholder: "City, state or zip" %>
        </div>
        <div class="btn-search">
          <%= f.submit "Find", class: "btn btn-primary", type: "submit" %>
        </div>
      <% end %>
    </div>
  </div>
</header>
