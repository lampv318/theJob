<main>
    <section>
      <%= f.fields_for :job_details do |job_detail|%>
      <div class="container">
        <header class="section-header">
          <span>Description</span>
          <h2>Job detail</h2>
          <p>Write about your company, job description, skills required, benefits, etc.</p>
        </header>
        <%= job_detail.cktext_area :content, class: "form-group"%>
      </div>
      <% end %>
    </section>
    <section class="bg-alt">
      <div class="container">
        <header class="section-header">
          <span>Are you done?</span>
          <h2>Submit Job</h2>
          <p>Please review your information once more and press the below button to put your job online.</p>
        </header>
        <p class="text-center"><%= f.submit "Submit your job", class: "btn btn-success btn-xl btn-round" %></p>
      </div>
    </section>
</main>
