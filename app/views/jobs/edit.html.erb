<%= form_for @job , url: user_job_path(current_user, @job.id) do |f| %>
<header class="page-header">
  <div class="container page-name">
    <h1 class="text-center">Edit Job</h1>
    <p class="lead text-center">Edit a Job vacancy for your company and put it online.</p>
  </div>

  <div class="container">

    <div class="row">
      <div class="form-group col-xs-12 col-sm-6">
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "Job title, e.g. Front-end developer" %>
      </div>

      <div class="form-group col-xs-12 col-sm-6">
        <%= f.text_field :company_name, class: "form-control input-lg", placeholder: "Company name" %>
       <a class="help-block" href="company-add.html">Add new company</a>
      </div>

      <div class="form-group col-xs-12">
        <%= f.text_area :description, class: "form-control", rows: "3",cols: "76",  placeholder: "Short description" %>
      </div>

      <div class="form-group col-xs-12">
        <%= f.text_field :url, class: "form-control", placeholder: "Application URL" %>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-md-4">
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
          <%= f.text_field :location,  class: "form-control", placeholder: "Location, e.g. Melon Park, CA" %>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-md-4">
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><i class="fa fa-briefcase"></i></span>
          <!-- <select class="form-control selectpicker"> -->
            <%= f.select :employment_type,  options_for_select(Job::EMPLOYMENT_TYPES) , class: "form-control selectpicker"%>
          <!-- </select> -->
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-md-4">
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><i class="fa fa-money"></i></span>
          <%= f.text_field :salary, class: "form-control", placeholder: "Salary" %>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-md-4">
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>
            <%= f.text_field :working_hour, class: "form-control", placeholder: "Working hours, e.g. 40" %>
          <span class="input-group-addon">hours / week</span>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-md-4">
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><i class="fa fa-flask"></i></span>
          <%= f.text_field :experience, class: "form-control", placeholder: "Experience, e.g. 5" %>
          <span class="input-group-addon">Years</span>
        </div>
      </div>

      <div class="form-group col-xs-12 col-sm-6 col-md-4">
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><i class="fa fa-certificate"></i></span>
          <%= f.select :education_level,  options_for_select(Job::EDUCATION_LEVELS) , class: "form-control selectpicker"%>
         <!--  <select class="form-control selectpicker" >
            <option>Postdoc</option>
            <option>Ph.D.</option>
            <option>Master</option>
            <option selected>Bachelor</option>
          </select> -->
        </div>
      </div>

    </div>

    <div class="button-group">
      <div class="action-buttons">
        <div class="upload-button">
          <button class="btn btn-block btn-primary">Choose a cover image</button>
          <input id="cover_img_file" type="file">
        </div>
      </div>
    </div>

  </div>
</header>
<!-- END Page header -->

<!-- Main container -->
<main>

    <!-- Job detail -->
    <section>
      <%= f.fields_for :job_details do |job_detail|%>
      <div class="container">

        <header class="section-header">
          <span>Description</span>
          <h2>Job detail</h2>
          <p>Write about your company, job description, skills required, benefits, etc.</p>
        </header>
        <%= job_detail.cktext_area :content, class: "form-group"%>

      </div>
      <% end %>
    </section>
    <!-- END Job detail -->

    <!-- Submit -->
    <section class="bg-alt">
      <div class="container">
        <header class="section-header">
          <span>Are you done?</span>
          <h2>EDIT JOB</h2>
          <p>Please review your information once more and press the below button to put your job online.</p>
        </header>

        <p class="text-center"><%= f.submit "EDIT JOB", class: "btn btn-success btn-xl btn-round" %></p>
      </div>
    </section>
    <!-- END Submit -->
</main>
<!-- END Main container -->
<% end %>
