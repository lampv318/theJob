<div class="col-xs-12">
  <a class="item-block" href="resume-detail.html">
    <header>
      <img class="resume-avatar" src="https://raw.githubusercontent.com/lampv318/image/master/noavatar-1.jpg" alt="">
      <div class="hgroup">
        <h4><%= resume.basic_infos.first.full_name %></h4>
        <h5><%= resume.basic_infos.first.headline %></h5>
      </div>
    </header>
    <div class="item-body">
      <%= resume.basic_infos.first.description %>
      <div class="tag-list">
        <% resume.tag_lists.each  do |tag_list| %>
          <span>#<%= tag_list.tag_name %></span>
        <% end %>
      </div>
    </div>

    <footer>
      <ul class="details cols-3">
        <li>
          <i class="fa fa-map-marker"></i>
          <span><%= resume.basic_infos.first.location %></span>
        </li>

        <li>
          <i class="fa fa-money"></i>
          <span><%= resume.basic_infos.first.salary %>/ hour</span>
        </li>
        <li>
          <i class="fa fa-certificate"></i>
          <span><%= resume.educations.first.degree %></span>
        </li>
      </ul>
    </footer>
  </a>
</div>
