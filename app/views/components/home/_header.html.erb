  <header class="site-header size-lg text-center" style="background-image: 
    url(https://raw.githubusercontent.com/lampv318/image/master/bg-banner1.jpg)">
    <div class="container">
      <div class="col-xs-12">
        <br><br>
        <h2>We offer <mark><%= @jobs.count %></mark> job vacancies right now!</h2>
        <h5 class="font-alt">Find your desire one in a minute</h5>
        <br><br><br>
        <%= form_for :search, url: search_path, html: {class: "header-job-search"} do |f| %>
          <div class="input-keyword">
            <%=text_field :q, params[:q], class: "form-control", placeholder: "Job title, skills, or company" %>
          </div>
          <div class="input-location">
            <input type="text" class="form-control" placeholder="City, state or zip">
          </div>
          <div class="btn-search">
            <%= submit_tag "Find", class: "btn btn-primary", type: "submit" %>
          </div>
        <% end %>
      </div>
    </div>
  </header>
